<style>
    body {
        background-image: url('/public/background.jpg');
    }

    .user-detail {
        display: flex;
        justify-content: center;
    }

    @media screen and (max-width : 1015px) {
        .user-detail {
            flex-direction: column;
        }
    }

    @media screen and (max-width : 698px) {
        .photo img {
            margin-left: -12rem;
            width: 29rem;
        }
    }

    .form-control {
        display: list-item;
        margin-top: 10px;
        width: 250px;
    }

    .form-submit {
        color: white;
        border-radius: 5px;
        background-color: blueviolet;
    }
</style>

<body class="sub_page">

    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="/">
                        <span>
                            Cab Booking
                        </span>
                    </a>
                
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav  ">
                                <li class="nav-item ">
                                    <a class="nav-link active" href="/driver/driverdashboard?token={{token}}">Home
                                        <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/driver/Profile?token={{token}}">Edit Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/driver/BookingsRecord?token={{token}}">History</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/driver/FindBookings?token={{token}}">Find Booking</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Log Out</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
    </div>
    <div class="user-detail">
        <div class="user-data">
            <form action="/driver/updateProfile?token={{token}}" method="post">
                <h2>Update Profile</h2>
                <label>FirstName:</label>
                <input type="text" class="form-control" value="{{profile.firstName}}" name="firstName">
                <br>
                <label>LastName:</label>
                <input type="text" class="form-control" value="{{profile.lastName}}" name="lastName">
                <br>
                <label>Email:</label>
                <input type="text" class="form-control" value="{{profile.email}}" name="email">
                <br>
                <label>Phone Number:</label>
                <input type="text" class="form-control" value="{{profile.phoneNumber}}" name="phoneNumber">
                <br>
                <input type="submit" class="form-submit" value="update">
            </form>
        </div>
        <div class="photo">
            <img src="/public/images/about-img.png" />
        </div>
    </div>
    <section class="info_section layout_padding-top layout_padding2-bottom">
        <div class="container">
            <div class="box">
                <div class="info_links">
                    <ul>
                        <li class="">
                            <a class="active" href="/driver/userdashboard?token={{token}}">Home
                                <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="">
                            <a class="" href="/driver/Profile?token={{token}}">Edit Profile</a>
                        </li>
                        <li class="">
                            <a class="" href="/driver/BookingsRecord?token={{token}}">History</a>
                        </li>
                        <li class="">
                            <a class="" href="/driver/FindBookings?token={{token}}">New Booking</a>
                        </li>
                        <li class="">
                            <a class="" href="/">Log Out</a>
                        </li>
                    </ul>
                </div>
                <div class="info_social">
                    <div>
                        <a href="">
                            <img src="/public/images/fb.png" alt="">
                        </a>
                    </div>
                    <div>
                        <a href="">
                            <img src="/public/images/twitter.png" alt="">
                        </a>
                    </div>
                    <div>
                        <a href="">
                            <img src="/public/images/linkedin.png" alt="">
                        </a>
                    </div>
                    <div>
                        <a href="">
                            <img src="/public/images/instagram.png" alt="">
                        </a>
                    </div>
                </div>

            </div>
        </div>

    </section>

    <!-- end info section -->

    <!-- footer section -->
    <section class="container-fluid footer_section">
        <div class="container">
            <p>
                &copy; 2021 All Rights Reserved By
                <a href="">Online Cab Booking Services</a>
            </p>
        </div>
    </section>
    <!-- footer section -->
</body>
